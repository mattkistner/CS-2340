                <ImageView
                    android:id="@+id/green5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#007F00"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/green" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:alpha="1"
            android:background="@color/black"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:translationY="-40dp"
            app:layout_constraintTop_toBottomOf="@+id/bottomBar">


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/right"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/holo_blue_light"
                android:src="@drawable/right" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/left"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/holo_blue_light"
                android:src="@drawable/left" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/down"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/holo_blue_light"
                android:src="@drawable/down" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/up"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/holo_blue_light"
                android:src="@drawable/up" />


        </LinearLayout>

        <ImageView
            android:id="@+id/spriteHolder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:alpha="1"
            app:srcCompat="@drawable/buzzsprite" />

        <ImageView
            android:id="@+id/stinger1"
            android:layout_width="160dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/stinger" />

        <ImageView
            android:id="@+id/scooter1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/scooter" />

        <ImageView
            android:id="@+id/scooter2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/scooter" />

        <ImageView
            android:id="@+id/dogs1"
            android:layout_width="160dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/dogs" />

        <ImageView
            android:id="@+id/dogs2"
            android:layout_width="160dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/dogs" />

        <ImageView
            android:id="@+id/dogs3"
            android:layout_width="160dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/dogs" />

    </LinearLayout>


