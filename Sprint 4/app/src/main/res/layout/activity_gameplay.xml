<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="-320dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:translationX="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/gameLives"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="This is game" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </LinearLayout>

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="646dp"
            android:background="@drawable/road"
            android:translationY="-40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/green"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#007F00"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/green" />

                <ImageView
                    android:id="@+id/green6"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#007F00"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/green" />

                <ImageView
                    android:id="@+id/green7"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#007F00"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/green" />

                <ImageView
                    android:id="@+id/green8"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#007F00"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/green" />

                <ImageView
                    android:id="@+id/green9"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#007F00"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/green" />
            </TableRow>

            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/river"
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#0000FE"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/river" />

                <ImageView
                    android:id="@+id/river1"
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#0000FE"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/river" />

                <ImageView
                    android:id="@+id/river2"
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#0000FE"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/river" />

                <ImageView
                    android:id="@+id/river3"
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#0000FE"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/river" />

                <ImageView
                    android:id="@+id/river4"
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#0000FE"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/river" />


            </TableRow>

            <TableRow
                android:id="@+id/row0"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView148"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#7F007F"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/goal" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#7F007F"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/goal" />

                <ImageView
                    android:id="@+id/imageView124"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#7F007F"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/goal" />

                <ImageView
                    android:id="@+id/imageView125"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#7F007F"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/goal" />

                <ImageView
                    android:id="@+id/imageView126"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#7F007F"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/goal" />

            </TableRow>

            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="3"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/road"
                    android:layout_width="80dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/road" />

                <ImageView
                    android:id="@+id/road1"
                    android:layout_width="80dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/road" />

                <ImageView
                    android:id="@+id/road2"
                    android:layout_width="80dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/road" />

                <ImageView
                    android:id="@+id/road3"
                    android:layout_width="80dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/road" />

                <ImageView
                    android:id="@+id/road4"
                    android:layout_width="80dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/road" />

            </TableRow>

            <TableRow
                android:id="@+id/greejn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/green1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#007F00"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/green" />

                <ImageView
                    android:id="@+id/green2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
